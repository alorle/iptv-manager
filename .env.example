HTTP_ADDRESS=0.0.0.0
HTTP_PORT=8080

# Aceproxy module configuration
# ACESTREAM_ENGINE_URL - URL del Ace Stream Engine (requerido para streaming, default: http://127.0.0.1:6878)
ACESTREAM_ENGINE_URL=http://127.0.0.1:6878

# Legacy variable (deprecated, use ACESTREAM_ENGINE_URL instead)
ACESTREAM_PLAYER_BASE_URL=http://127.0.0.1:6878/ace/getstream

# STREAM_BASE_URL - URL base para generar URLs en playlists (opcional, default: usa URLs relativas)
# STREAM_BASE_URL=http://localhost:8080

# PROXY_READ_TIMEOUT - Timeout de lectura (default: 5s)
PROXY_READ_TIMEOUT=5s

# PROXY_WRITE_TIMEOUT - Timeout de escritura (default: 10s)
PROXY_WRITE_TIMEOUT=10s

# PROXY_BUFFER_SIZE - Tama√±o del buffer en bytes (default: 4194304 = 4MB)
PROXY_BUFFER_SIZE=4194304

# Cache configuration (required)
CACHE_DIR=/tmp/iptv-cache
CACHE_TTL=1h
